@page "/product-items"
@inherits ProductItemsBase


<PageTitle>@BlazorAppBase.GetTitle()</PageTitle>

<h1>Product Items</h1>
<div class="d-flex flex-row-reverse">
    <a class="bi bi-plus-circle btn btn-primary fs-5" href="/product-items/add"></a>
</div>

<div class="table-responsive">
    @if (ProductItems.Count() > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" class="col fs-5 fw-semibold">Id</th>
                    <th scope="col" class="col fs-5 fw-semibold">Item Name</th>
                    <th scope="col" class="col fs-5 fw-semibold">Product Product Reference</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ProductItems)
                {
                    <tr onclick="window.location='/product-items/details/@item.Id'" class="clickable" style="cursor: pointer;">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@(item.ProductReferenceName.Length > 0 ? item.ProductReferenceName : "No Description")</td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p>No Data to Display</p>
    } 
</div>
