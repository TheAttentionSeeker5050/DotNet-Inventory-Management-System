@page "/search"
@inherits SearchBase
@using Inventorium.Web.Components.Layout



<PageTitle>@BlazorAppBase.GetTitle()</PageTitle>


<h1>Search</h1>

<div class="table-responsive">

    @if (SearchResults.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" class="col fs-5 fw-semibold">Id</th>
                    <th scope="col" class="col fs-5 fw-semibold">Name</th>
                    <th scope="col" class="col fs-5 fw-semibold">Category</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var result in SearchResults)
                {
                    <tr onclick="window.location='/product-references/@result.OptionDisplayId'" class="clickable" style="cursor: pointer; hover: {background-color: red !important}">
                        <td>@result.OptionDisplayId</td>
                        <td>@result.OptionDisplayValue</td>
                        <td>@result.OptionDisplayCategoryLabel</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Data to Display</p>
    }
    
</div>
