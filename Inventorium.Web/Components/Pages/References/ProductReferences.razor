@page "/product-references"
@inherits ProductReferencesBase
@using Inventorium.Web.Components.Layout



<PageTitle>@BlazorAppBase.GetTitle()</PageTitle>


<h1>Product References</h1>
<div class="d-flex flex-row-reverse">
    <a class="bi bi-plus-circle btn btn-primary fs-5" href="/product-references/add"></a>
</div>

<div class="table-responsive">
    @if (ProductReferences.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" class="col fs-5 fw-semibold">Id</th>
                    <th scope="col" class="col fs-5 fw-semibold">Reference Name</th>
                    <th scope="col" class="col fs-5 fw-semibold">Reference Description</th>
                    <th scope="col" class="col fs-5 fw-semibold">Category</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var reference in ProductReferences)
                {
                    <tr onclick="window.location='/product-references/@reference.Id'" class="clickable" style="cursor: pointer; hover: {background-color: red !important}">
                        <td>@reference.Id</td>
                            <td>@reference.Name</td>
                            <td>@(reference.Description.Length > 0 ? reference.Description : "No Description")</td>
                            <td>@reference.ProductCategoryName</td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p>No Data to Display</p>
    }
</div>
